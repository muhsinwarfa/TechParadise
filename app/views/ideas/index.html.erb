<div class="index">
  <p id="notice"><%= notice %></p>

  <div class="indexheading">

    <h1 id="indextitle">Explore The Showcase</h1>
    <div class="selectlinks">
           <select>
          <option value="new">Newest</option>
          <option value="new">Oldest</option>
          <option value="new">Ascending</option>
          <option value="new">Descending</option>
        </select>

        <select>
          <option value="new">Platform</option>
          <option value="new">Help needed</option>
        </select>
    </div>

    <%= link_to 'Have a New Idea?', new_idea_path,class: "newidealink" %>
      
  </div>
    
  <div class="idealist">
       <table class="indextable">

      <thead>
        <tr>
          <th>Idea name</th>
          <th>Platform</th>
          <th>Help Needed</th>
          
          <th colspan="3"></th>
        </tr>
      </thead>
     
        <tbody>
        <% @ideas.each do |idea| %>

          <tr class="indextablerow"> 
            <td><%= idea.idea_name %></td>
          
            <td><%= idea.ad %></td>
            <td><%= idea.platform_id %></td>
          
            <td><%= link_to 'Show', idea ,class: "idealink"%></td>
            <td><%= link_to 'Edit', edit_idea_path(idea),class: "idealink" %></td>
            <td><%= link_to 'Destroy', idea, class: "idealink",method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
       

          
        <% end %>
      </tbody>
    </table>
  <br>

  </div>
  

</div>

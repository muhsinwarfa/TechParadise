<p id="notice"><%= notice %></p>

<h1>Listing Platforms</h1>
<div class="idealist">
  
<table class="indextable">
  <thead>
    <tr>
      <th class="th tablespace">Platform name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td class="td tablespace"><%= platform.platform_name %></td>
        <td><%= link_to 'Show', platform ,class: "idealink tablespace"%></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) ,class: "idealink tablespace"%></td>
        <td><%= link_to 'Destroy', platform,class: "idealink tablespace", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>


<%= link_to 'New Platform', new_platform_path ,class: "newidealink"%>

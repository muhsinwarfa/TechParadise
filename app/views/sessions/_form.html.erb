<div class="idealist" >


<%= form_for(:sessions, url: sessions_path) do |f| %>
 <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-danger"%>
  <%end%>

  <div class="field tablespace">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field tablespace">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  
  <div class="actions tablespace">
    <%= f.submit "Login" %>
    
  </div>
 
<% end %>

</div>



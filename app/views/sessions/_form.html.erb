<div class="idealist" >


<%= form_for(:sessions) do |f| %>

  <div class="field tablespace">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field tablespace">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  
  <div class="actions tablespace">
    <%= f.submit "Login" %>
  </div>
<% end %>

</div>


